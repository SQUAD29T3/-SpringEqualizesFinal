package br.com.equalizes.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import br.com.equalizes.model.PerfilEscola;

public interface PerfilEscolaRepository extends JpaRepository<PerfilEscola, Long>{
	
	// FAZ SELECT COM AS TABELAS ESCOLA E PERFIL ESCOLA JUNTANDO AS INFORMAÇÕES DE E-MAIL E SENHA 
@Query(value="select esc.email, perfilEsc.senha\r\n"
			+ "from escola as esc, perfil_escola as perfilEsc\r\n"
			+ "where esc.email = :email and perfilEsc.senha = :senha", nativeQuery = true)
	public PerfilEscola Login(String email, String senha);

}
