package br.com.equalizes.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.servlet.ModelAndView;

import br.com.equalizes.model.Pedido;
import br.com.equalizes.repository.PedidoRepository;

@Controller
public class PedidoController {
	
	@Autowired
	private PedidoRepository pedidoRepository;
	
	@GetMapping("/fazerPedido")
	// P√ÅGINA FAZER PEDIDO - ESCOLAS
	public String fazerPedidos() {
		return "perfil-escola/fazer-pedido";
	}
	
	
	public ModelAndView solicitacaoContato() {
		ModelAndView modelAndView = new ModelAndView("site/contato");
		modelAndView.addObject("contatos", new Contato());
		return modelAndView;
	}
	
	
	

}
