package br.com.equalizes.controller;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.ModelAndView;

import br.com.equalizes.model.Escola;
import br.com.equalizes.model.PerfilEscola;
import br.com.equalizes.repository.EscolaRepository;
import br.com.equalizes.repository.PerfilEscolaRepository;

@Controller
public class LoginController {
	
	@Autowired
	private EscolaRepository escolaRepository;
	
	@Autowired
	private PerfilEscolaRepository perfilEscolaRepository;

	@GetMapping("/login")
	// PÁGINA LOGIN
	public ModelAndView login() {
		ModelAndView mv = new ModelAndView("site/login");
		return mv;
	}
	
	@PostMapping("/logar")
	// RECEBE MODEL E OBJETO COM O EMAIL E SENHA
	public String logar(Model model, PerfilEscola userParams, Escola escola, HttpSession session) {
		
		// INSTÂNCIA DE USUÁRIO - RETORNA O OBJETO
		PerfilEscola perfilEsc = this.perfilEscolaRepository.Login(userParams.getEscola(), userParams.getSenha());
		
		if(perfilEsc != null) {
			session.setAttribute("usuarioLogado", perfilEsc);
			return "redirect:/perfilEscola";
			
		}
		
		model.addAttribute("erro", "Email e/ou senha inválidos!");
		return "/login";
	}
	
	
}
