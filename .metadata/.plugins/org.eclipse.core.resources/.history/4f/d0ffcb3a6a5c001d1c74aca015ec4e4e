package br.com.equalizes.repository;


import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import br.com.equalizes.model.Escola;
import br.com.equalizes.model.PerfilEscola;

public interface EscolaRepository extends JpaRepository<Escola, Long> {
	
	// LISTA APENAS AS ESCOLAS ACEITAS
	@Query(value = "select * from escola where status_cadastro = :status", nativeQuery = true)
	public List<Escola> findByStatus(String status);
	
	
	@Query(value="select esc.id as escola_Id, perfilEsc.id as perfil_Id,\r\n"
			+ "esc.email, perfilEsc.senha\r\n"
			+ "from escola as esc, perfil_escola as perfilEsc\r\n"
			+ "where esc.id = perfilEsc.id;", nativeQuery = true)
	public PerfilEscola Login();

}

